# Database
DATABASE_URL=postgresql://dealscout:localdev@localhost:5432/dealscout

# Redis
REDIS_URL=redis://localhost:6379

# API
API_PORT=8000
API_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Anthropic API Key (required)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# eBay API Credentials (for price validation and deal analysis)
# Get from: https://developer.ebay.com/
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here

# eBay Marketplace Account Deletion Notification
# Required to keep eBay API keys active
# Must be 32-80 characters (alphanumeric, underscore, hyphen)
EBAY_VERIFICATION_TOKEN=your_verification_token_32_to_80_chars_here

# Chrome Configuration
CHROME_DEBUG_PORT=9222

# Rate Limiting
MIN_DELAY_SECONDS=3
MAX_DELAY_SECONDS=7
MAX_PAGES_PER_HOUR=10
